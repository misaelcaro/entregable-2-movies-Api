{
  "name": "template-ci-cd",
  "version": "1.0.0",
  "main": "./src/app.js",
  "repository": {
    "url": "git+https://github.com/SheykoWk/ci-cd-template-projects.git"
  },
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon ./src/app.js",
    "test": "mocha ./test/**/*.test.js",
    "prepare": "husky install",
    "husky:hook": "npx husky add .husky/pre-commit 'npm test' &&  git add .husky/pre-commit",
    "init": "npm run prepare && npm run husky:hook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "```bash npm install ```",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "src/app.js": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/SheykoWk/ci-cd-template-projects/issues"
  },
  "homepage": "https://github.com/SheykoWk/ci-cd-template-projects#readme",
  "directories": {
    "test": "test"
  }
}
